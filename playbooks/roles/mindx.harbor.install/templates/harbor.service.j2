[Unit]
Description=Harbor
After=docker.service systemd-networkd.service system-resolved.service
Requires=docker.service

[Service]
Type=simple
Restart=on-failure
RestartSec=5
ExecStart=/usr/bin/docker-compose -f {{HARBOR_PATH}}/harbor/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f {{HARBOR_PATH}}/harbor/docker-compose.yml down

[Install]
WantedBy=multi-user.target
